# SwiftNotes Backend Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:5173

# Supabase Configuration
SUPABASE_URL=https://ppavdpzulvosmmkzqtgy.supabase.co
SUPABASE_SERVICE_KEY=your-service-key-here

# Google AI Configuration
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# Redis Configuration (for rate limiting and queuing)
REDIS_URL=redis://localhost:6379

# Security Configuration
JWT_SECRET=your-jwt-secret-here
BCRYPT_ROUNDS=12

# Rate Limiting Configuration
ENABLE_RATE_LIMITING=true
ENABLE_SMART_QUEUE=true
ENABLE_USAGE_MONITORING=true
ENABLE_COST_TRACKING=true

# API Rate Limits (requests per window)
AUTH_RATE_LIMIT=10
GENERAL_RATE_LIMIT=100
UPLOAD_RATE_LIMIT=5
AI_RATE_LIMIT=20

# Credit System Configuration
FREE_TIER_CREDITS=10
PAID_TIER_CREDITS=100
PREMIUM_TIER_CREDITS=500

# AI Configuration
AI_MAX_RETRIES=3
AI_RETRY_DELAY=1000
AI_TIMEOUT=30000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/swiftnotes.log

# Email Configuration (for password reset, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@swiftnotes.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Database Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_TIMEOUT=30000

# Monitoring and Analytics
ENABLE_ANALYTICS=false
ANALYTICS_API_KEY=your-analytics-key

# Feature Flags
ENABLE_OCR=false
ENABLE_PAYMENTS=false
ENABLE_ADMIN_PANEL=true
ENABLE_DEBUG_MODE=false

# Payment Configuration (Stripe)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key

# Webhook URLs
STRIPE_WEBHOOK_URL=/api/webhooks/stripe
SUPABASE_WEBHOOK_URL=/api/webhooks/supabase

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Session Configuration
SESSION_SECRET=your-session-secret
SESSION_TIMEOUT=86400000

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,https://your-domain.com

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30
